@model Proiect.Models.Sarcina

@{
    ViewData["Title"] = "Modifică";
}

<h1>Modifică</h1>
<div class="mt-5">
<h4>Sarcină</h4></div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="Denumire" class="control-label"></label>
                <input asp-for="Denumire" class="form-control" />
                <span asp-validation-for="Denumire" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="Descriere" class="control-label"></label>
                <input asp-for="Descriere" class="form-control" />
                <span asp-validation-for="Descriere" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="Prioritate" class="control-label"></label>
                <input asp-for="Prioritate" class="form-control" />
                <span asp-validation-for="Prioritate" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="TipSarcina" class="control-label"></label>
                <input asp-for="TipSarcina" class="form-control" />
                <span asp-validation-for="TipSarcina" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="OreEstimate" class="control-label"></label>
                <input asp-for="OreEstimate" class="form-control" />
                <span asp-validation-for="OreEstimate" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <div class="form-group">
                <label asp-for="PersoanaId" class="control-label"></label>
                <select asp-for="PersoanaId" class="form-control" asp-items="ViewBag.PersoanaId"></select>
                <span asp-validation-for="PersoanaId" class="text-danger"></span>
            </div>
            </div>
            <div class="mt-3">
            <div class="form-group">
                <input type="submit" value="Salvează" class="btn btn-primary" />
            </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Înapoi la listă</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
